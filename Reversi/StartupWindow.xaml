<Window x:Class="Reversi.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reversi"
        mc:Ignorable="d"
        Background="Beige"
        WindowStartupLocation="CenterScreen"
        Title="Welcome to Reversi!" Height="350" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Label Content="Welcome to Reversi!" HorizontalAlignment="Center"></Label>
            <Label Content="Before you start, you need to enter the board size." HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox x:Name="TextboxBoardSize" Width="270" Padding="4"/>
            <Button x:Name="BtnStart" Content="Start game" Width="270" Click="BtnStart_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
